# 陕西文投集团官网部署配置文件

# 远程服务器配置
REMOTE_USER=yc
REMOTE_HOST=8.140.245.26
REMOTE_PATH=/home/yc/opensource
PROJECT_NAME=scgWeb

# 部署选项
BACKUP_ENABLED=true
VERIFY_DEPLOYMENT=true
CLEANUP_AFTER_DEPLOY=true

# 文件传输选项
USE_RSYNC=true
RSYNC_OPTIONS="-avz --delete"
SCP_OPTIONS="-r"

# 排除文件/目录
EXCLUDE_PATTERNS=(
    ".git"
    "node_modules"
    "dist"
    "*.log"
    "*.tmp"
    ".DS_Store"
    "Thumbs.db"
)

# 包含文件/目录
INCLUDE_PATTERNS=(
    "*.html"
    "news/"
    "about/"
    "css/"
    "js/"
    "assets/"
    "package.json"
    "README.md"
    "update-version.js"
)

# 部署后操作
POST_DEPLOY_COMMANDS=(
    "chmod -R 755 /home/yc/opensource/scgWeb"
    "echo '部署完成时间: $(date)' > /home/yc/opensource/scgWeb/last-deploy.txt"
)

# 通知配置（可选）
NOTIFY_EMAIL=""
NOTIFY_WEBHOOK="" 